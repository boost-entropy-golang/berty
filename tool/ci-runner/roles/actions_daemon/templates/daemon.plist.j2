<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>{{ launchd_daemon.name }}</string>
    <key>Program</key>
    <string>{{ runner_folder }}/run.sh</string>
    <key>StandardOutPath</key>
    <string>{{ runner_folder }}/logs/run.stdout</string>
    <key>StandardErrorPath</key>
    <string>{{ runner_folder }}/logs/run.stderr</string>
    <key>UserName</key>
    <string>{{ ansible_user }}</string>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <false/>
  </dict>
</plist>
